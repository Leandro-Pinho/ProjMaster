@model Usuario

<div class="container">
    <h1 class="text-center mt-5">Realize a Edição do Usuário</h1>
    <div class="row justify-content-md-center mt-2">
        <div class="jumbotron col-5">
            <form action="editarUsuario" method="post">
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" class="form-control" name="Nome" id="userNome" value="@Model.Nome">
                </div>
                <div class="form-group">
                    <label>Login</label>
                    <input type="text" class="form-control" name="login" id="userLogin" value="@Model.login">
                </div>
                <div class="form-row">
                    <div class="col-md-7 mb-3">
                        <label>Senha</label>
                        <input type="text" class="form-control" name="senha" id="userSenha" value="@Model.senha">
                    </div>
                    <div class="col-md-5 mb-3">
                        <label>Tipo/Usuario</label>
                        <select class="form-control" name="tipo" id="userTipo">
                            <option value="@Usuario.ADMIN">Administrator</option>
                            <option value="@Usuario.PADRAO">Padrão</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-4 mt-3">
                       <input type="hidden" asp-for="Id"/>
                       <input type="submit" value="CONCLUIR EDICÃO" class="btn btn-outline-dark">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>