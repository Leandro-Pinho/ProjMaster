@using Microsoft.AspNetCore.Http
@model Usuario

<div class="container">
    <h1 class="text-center mt-5">Registre um usuário</h1>
    <div class="row justify-content-md-center mt-2" id="jumbo">
        <div class="jumbotron col-5">
            <form action="RegistrarUsuarios" method="post">
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" class="form-control" name="Nome" id="userNome" placeholder="Nome">
                </div>
                <div class="form-group">
                    <label>Login</label>
                    <input type="text" class="form-control" name="login" id="userLogin" placeholder="Login">
                </div>
                <div class="form-row">
                    <div class="col-md-7 mb-3">
                        <label>Senha</label>
                        <input type="text" class="form-control" name="senha" id="userSenha" placeholder="Senha">
                    </div>
                    @if(Context.Session.GetInt32("tipo") == 1) 
                    {
                    <div class="col-md-5 mb-3">
                        <label>Tipo/Usuario</label>
                        <select class="form-control" name="tipo" id="userTipo">
                            <option value="@Usuario.ADMIN">Administrator</option>
                            <option value="@Usuario.PADRAO">Padrão</option>
                        </select>
                    </div>
                    }
                </div>
                <div class="form-row">
                    <div class="col-md-4 mt-3">
                       <input type="hidden" asp-for="Id"/>
                       <input type="submit" value="REGISTRAR" class="btn btn-outline-dark">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>