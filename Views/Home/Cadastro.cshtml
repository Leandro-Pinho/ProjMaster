@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usuário";
}
<h2>Cadastro de Usuário</h2>
<div class="row">
<div class="col-7">
<p id="pMensagem">@ViewBag.Mensagem</p>
<form asp-action="Cadastro" method="POST">
     <div class="row">  
       <div class="col"></div>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" required/>
     </div>
     <div class="row">  
       <div class="col"></div>
        <label asp-for="Login">Login:</label>
        <input asp-for="Login" required/>
     </div>
     <div class="row">  
       <div class="col"></div>
        <label asp-for="Senha">Senha:</label>
        <input asp-for="Senha" required/>
     </div>
     <div class="row">  
       <div class="col"></div>
        <label asp-for="DataNascimento">DataNascimento:</label>
        <input asp-for="DataNascimento" required/>
     </div>
     <div class="row">  
       <div class="col"></div>
        <input type="submit" value="Cadastrar" />
     </div>
</form>
</div>
</div>