@model ProjMaster.Models.LancheGeneroViewModel

@{
    ViewData["Title"] = "IndexMain";
}

<section>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/imagem/pizzas.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>As Melhores Pizzas</h5>
                            <p>Veriedades de sabores, e promoções diarias. CONFIRA!</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/imagem/lanches.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Os Melhoes Lanches</h5>
                            <p>Monte do seu jeito!</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/imagem/bebi.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>As Melhores Bebidas</h5>
                            <p>Para um melhor acompanhamento em todas as ocasiões</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>

<div>
    <nav class="navbar navbar-light justify-content-between border-2 border-dark border-top">
        <div class="container">
        <a class="navbar-brand">Pizzas</a>
        <form class="form-inline" asp-controller="Lanche" asp-action="IndexMain" method="get">
            <select class="custom-select" asp-for="LancheGenero" asp-items="Model.Generos">
                <option selected value="">Todos</option>
            </select>
            <input class="form-control mr-sm-2" type="search" placeholder="Pesquisa" aria-label="Search" asp-for="SearchString">
            <button class="btn btn-outline-light" type="submit"><ion-icon size="small" name="search-outline"></ion-icon></button>
        </form>
        </div>
    </nav>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                @foreach (var item in Model.Lanches) {
                    <div class="col-md-3 col-sm-3 col-lg-3">
                        <div class="card border border-dark" style="width: 16rem; margin: 8px auto; position: relative;">
                            <img src="@item.ImagemUrl" class="img-rounded" alt="" style="height: 10rem;"/>
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Genero)</p>
                                <p>
                                    @Html.DisplayFor(modelItem => item.Preco)  |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </p>
                                <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-LancheId="@item.Id">Incluir no Carrinho</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>