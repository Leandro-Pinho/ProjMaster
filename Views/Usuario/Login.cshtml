@model Usuario
@{
    ViewData["Title"] = "Login";
}
<br></br>
<div class="row">  
       <div class="col-5"></div>  
       <h2>Login</h2>
</div>
<div class="row">
    <div class="col-7">
      <p id="pMensagem">@ViewBag.Mensagem</p>
      <form asp-action="Login" method="POST">
      <div class="row">  
       <div class="col"></div>        
          <label class="col-1" asp-for="Login">Login:</label>
          <input class="col-3" asp-for="Login" />
       </div>
      <div id="cir" class="row">  
        <div class="col"></div>  
        <label class="col-1" asp-for="Senha">Senha:</label>
        <input class="col-3" asp-for="Senha" type="password" />
      </div>
      
      <div class="row">  
        <div class="col"></div>
        <input type="submit" value="Entrar" />
      </div>
      </form>
    </div>
</div>